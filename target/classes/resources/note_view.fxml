<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NoteController">
   <children>
      <VBox layoutX="59.0" layoutY="56.0" prefHeight="295.0" prefWidth="495.0">
         <children>
            <VBox fx:id="sessionInput" prefHeight="51.0" prefWidth="495.0">
               <children>
                  <BorderPane prefHeight="22.0" prefWidth="495.0">
                     <left>
                        <Label text="Ttile" BorderPane.alignment="CENTER" />
                     </left>
                     <right>
                        <Label prefHeight="16.0" prefWidth="290.0" text="Content" BorderPane.alignment="CENTER" />
                     </right>
                  </BorderPane>
                  <BorderPane fx:id="inputContainer" prefHeight="45.0" prefWidth="495.0">
                     <left>
                        <TextField fx:id="inputTitle" prefHeight="52.0" prefWidth="170.0" BorderPane.alignment="CENTER" />
                     </left>
                     <right>
                        <TextArea fx:id="inputContent" prefHeight="17.0" prefWidth="291.0" BorderPane.alignment="CENTER" />
                     </right>
                  </BorderPane>
                  <BorderPane prefHeight="61.0" prefWidth="495.0">
                     <center>
                        <Button fx:id="addButton" mnemonicParsing="false" onMouseClicked="#addNote" text="Add" BorderPane.alignment="CENTER" />
                     </center>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </BorderPane>
               </children>
            </VBox>
            <VBox fx:id="sessionNotes" prefHeight="209.0" prefWidth="495.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <BorderPane prefHeight="24.0" prefWidth="495.0">
                     <center>
                        <Label text="Saved Notes" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
                  <ListView fx:id="notebookContainer" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
